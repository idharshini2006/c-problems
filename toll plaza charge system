#include<stdio.h>
int main() {
    int vehicleType,trips;
    scanf("%d %d",&vehicleType,&trips);
    switch (vehicleType) {
        case 1:
            if (trips==1) {
                printf("Rs.100");
            }
            else if (trips>=2 || trips<=10) {
                printf("Rs.800");
            }
            else {
                printf("Rs.800");
            }
            break;
        case 2:
            if (trips==1) {
                printf("Rs.240");
            }
            else {
                printf("Rs.%d",trips*240);
            }
            break;
    }
    return 0;
}
