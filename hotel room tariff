#include<stdio.h>
int main() {
    int roomType;
    char season;
    scanf("%d %c",&roomType,&season);
    switch (roomType) {
        case 1:
            if (season=='A') {
                printf("Rs.2500");
            }
            else if (season=='B') {
                printf("Rs.2000");
            }
            else {
                printf("please enter invalid input");
            }
            break;
        case 2:
            if (season=='C') {
                printf("Rs.4000");
            }
            else if (season=='D') {
                printf("Rs.3000");
            }
            else {
                printf("please enter invalid input");
            }
            break;
    }
    return 0;
}
