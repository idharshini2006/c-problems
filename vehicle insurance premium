#include<stdio.h>
int main() {
    int category,age;
    scanf("%d %d",&category,&age);
    switch (category) {
        case 1:
            if (age<=5 || age>=0) {
                printf("Rs.1500");
            }
            else {
                printf("Rs.2500");
            }
            break;
        case 2:
            if (age<=5 || age>=0) {
                printf("Rs.4000");
            }
            else {
                printf("Rs.6000");
            }
            break;
    }
    return 0;
}
