#include<stdio.h>
int main() {
    int a;
    int b,c;
    printf("1.Sum\n");
    printf("2.Difference\n");
    printf("3.Product\n");
    printf("4.Quotient\n");
    printf("5.Remainder\n");
    scanf("%d %d %d",&a,&b,&c);
    switch (a) {
        case 1:
            printf("Sum=%d",b+c);
            break;
        case 2:
            printf("Difference=%d",b-c);
            break;
        case 3:
            printf("Product=%d",b*c);
            break;
        case 4:
            printf("Quotient=%d",b/c);
            break;
        case 5:
            printf("Remainder=%d",b%c);
            break;
        default:
            printf("error! Please enter valid input");
            break;
    }
    return 0;
}
